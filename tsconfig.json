{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "es5",
        "module": "ESNext",
        "jsx": "react-jsx",
        "strict": true,
        "allowJs": true,
        "isolatedModules": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "noEmit": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "verbatimModuleSyntax": true
    },
    "include": ["src"]
}
